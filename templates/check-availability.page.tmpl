{{template "base" .}}

{{define "content"}}
<div class="mx-auto mt-5 p-5 col-9">
  <h1> Search for Availability </h1>

  <form action="/input-data" class="mt-3" method="GET">

    <div class="row">

      <div class="col">

        <div class="mb-3">
          <label for="start_date" class="form-label">Start Date</label>
          <input required type="date" class="form-control" id="start_date" name="start_date"
            aria-describedby="startDate">
        </div>

      </div>

      <div class="col">

        <div class="mb-3">
          <label for="end_date" class="form-label">End Date</label>
          <input required type="date" class="form-control" id="end_date" name="end_date" aria-describedby="endDate">
        </div>

      </div>

      <button type="submit" class="btn btn-primary mt-3">Check for availability</button>
    



    </div>





  </form>

</div>

{{end}}